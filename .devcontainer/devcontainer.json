{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/base:1-jammy",
  "containerEnv": {
    "GITHUB_BASE_URL": "http://localhost:4010",
    "PYTHON_PATH": "${containerWorkspaceFolder}/.venv"
  },
  "features": {
    "ghcr.io/devcontainers/features/python": {
      "version": "3.11",
      "installTools": false
    },
    "ghcr.io/devcontainers/features/docker-in-docker": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers-contrib/features/poetry:2": {},
    "ghcr.io/trunk-io/devcontainer-feature/trunk:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube": {
      "minikube": "none",
      "helm": "none",
      "kubectl": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "uid": 1000,
      "gid": 1000
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "bierner.markdown-mermaid",
        "tamasfe.even-better-toml",
        "github.vscode-github-actions",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python": {
          "defaultInterpreterPath": ".venv/bin/python",
          "testing": {
            "pytestArgs": ["tests"],
            "unittestEnabled": false,
            "pytestEnabled": true
          },
          "analysis": {
            "typeCheckingMode": "basic"
          },
          "editor": {
            "defaultFormatter": "ms-python.python"
          }
        }
      }
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "poetry install --no-interaction --no-ansi --no-root",
  "postAttachCommand": {
    "compose": "docker compose --profile develop up --build",
    "watch": "docker compose alpha watch"
  },
  "portsAttributes": {
    "6379": {
      "label": "redis",
      "onAutoForward": "silent"
    },
    "8001": {
      "label": "redis-insight",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "runner-manager",
      "onAutoForward": "silent"
    },
    "4010": {
      "label": "github-mock",
      "onAutoForward": "silent"
    }
  }
}
